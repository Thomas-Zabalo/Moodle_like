{% extends 'index.html.twig' %}

{% block section %}

<div class="pagination">
  <ol>
    <li><a href="?">Accueil</a></li>
    <li><a href="?action=liste">Liste</a></li>
    {% for projet in projets %}
    <li>{{ projet.titre }}</li>
    {% endfor %}
  </ol>
</div>

<!-- BLOC QUI AFFICHE LE PROJET -->

<div id="projet" class="projet container">
  <div>
    <div>
      <section id="projet" class="projet">
        <div class="col-lg-12 col-md-6 content d-flex flex-column justify-content-center order-last order-md-first">
          <!-- AFFICHAGE DU CONTEXTE -->
          {% for contexte in contextes %}
          <h3>{{ contexte.identifiant }}: {{ contexte.intitule }}</h3>
          {% endfor %}
        </div>
      </section>


      <section>
        <div class="container">

          <div class="row g-5">

            <div class="col-lg-8 col-md-6 content d-flex flex-column justify-content-center order-last order-md-first">
              <!-- AFFICHAGE DES INFORMATIONS DU PROJET  -->
              {% for projet in projets %}
              <!-- TITRE DU PROJET -->
              <h3>{{ projet.titre }}</h3>
              <!-- DESCRIPTION DU PROJET  -->
              <p>{{ projet.description }}</p>

              <div class="d-flex align-items-center mb-3">
                <p class="h5">Outils utilisés :</p>
                <!-- AFFICHAGE DES TAGS PRÉSENT DANS LE PROJET -->
                {% for tag in tags %}
                <button type="button" class="btn btn-light btn-xs" style="margin-left:20px;" disabled="">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-tag-fill" viewBox="0 0 16 16">
                    <path
                      d="M2 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 6.586 1zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                  </svg>
                  <!-- NOM DES TAGS DU PROJET -->
                  {{ tag.nomtag }}
                </button>
                {% endfor %}
              </div>

              <div class="d-flex align-items-center mb-3">
                <p class="h5">Catégorie :</p>
                <!-- AFFICHAGE DES CATEGORIES PRÉSENT DANS LE PROJET -->
                {% for categorie in categories %}
                <button type="button" class="btn btn-light btn-xs" style="margin-left:20px;" disabled="">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-threads" viewBox="0 0 16 16">
                    <path
                      d="M6.321 6.016c-.27-.18-1.166-.802-1.166-.802.756-1.081 1.753-1.502 3.132-1.502.975 0 1.803.327 2.394.948s.928 1.509 1.005 2.644q.492.207.905.484c1.109.745 1.719 1.86 1.719 3.137 0 2.716-2.226 5.075-6.256 5.075C4.594 16 1 13.987 1 7.994 1 2.034 4.482 0 8.044 0 9.69 0 13.55.243 15 5.036l-1.36.353C12.516 1.974 10.163 1.43 8.006 1.43c-3.565 0-5.582 2.171-5.582 6.79 0 4.143 2.254 6.343 5.63 6.343 2.777 0 4.847-1.443 4.847-3.556 0-1.438-1.208-2.127-1.27-2.127-.236 1.234-.868 3.31-3.644 3.31-1.618 0-3.013-1.118-3.013-2.582 0-2.09 1.984-2.847 3.55-2.847.586 0 1.294.04 1.663.114 0-.637-.54-1.728-1.9-1.728-1.25 0-1.566.405-1.967.868ZM8.716 8.19c-2.04 0-2.304.87-2.304 1.416 0 .878 1.043 1.168 1.6 1.168 1.02 0 2.067-.282 2.232-2.423a6.2 6.2 0 0 0-1.528-.161" />
                  </svg>
                  <!-- NOM DES CATEGORIES DU PROJET -->
                  {{ categorie.nomcat }}
                </button>
                {% endfor %}
              </div>

              <div class="d-flex align-items-center mb-3">
                <p class="h5">Contributeurs :</p>
                <!-- AFFICHAGE DES CONTRIBUTEURS PRÉSENT DANS LE PROJET -->
                {% for contributeur in membre %}
                <button type="button" class="btn btn-light btn-xs" style="margin-left:20px;" disabled="">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-bookmark-fill" viewBox="0 0 16 16">
                    <path
                      d="M2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2" />
                  </svg>
                  <!-- NOM DES CONTRIBUTEURS DU PROJET -->
                  {{ contributeur.prenom }} {{ contributeur.nom }}
                </button>
                {% endfor %}
              </div>

              <div class="d-flex align-items-center mb-3">
                <!-- AFFICHAGE DES LIENS PRÉSENT DANS LE PROJET -->
                {% for lien in liens %}
                <!-- AFFICHAGE DU LIEN SOURCE DU PROJET -->
                <button type="button" class="btn btn-outline-blue btn-xs me-2">
                  <a href="{{lien.nomsource}}" target=”_blank”>Lien source</a>
                </button>
                <!-- AFFICHAGE DU LIEN DE DEMO DU PROJET -->
                <button type="button" class="btn btn-outline-blue btn-xs ms-2">
                  <a href="{{lien.nomdemo}}" target=”_blank”>Lien démo</a>
                </button>
                {% endfor %}
              </div>

            </div>
            <!-- IMAGE DU PROJET -->
            <div class="col-lg-4 col-md-6 order-first order-md-last d-flex align-items-center">
              <div class="img">
                <img src="{{ projet.image }}" alt="" class="img-fluid">
              </div>
            </div>
            {% endfor %}
          </div>

        </div>
      </section>
    </div>
  </div>
</div>


<!-- SI L'UTILISATEUR EST CONNECTÉ ALORS AFFICHAGE DU FORM -->

{% if acces == "oui" %}

<div class="projet container com ">
  <div class="row d-flex justify-content-center">
    <form method="post" action="?" class="well-blue">
      <label for="lieudepart" class="col-sm-2 col-form-label col-form-label-sm">Commentaire</label>
      <div class="col-sm-10">
        <textarea id="story" id="Commentaire" name="Commentaire" rows="5" cols="33" class="form-control form-control-sm"
          required placeholder="Quel est votre commentaire"></textarea>
      </div>
      <!-- RECUPERATION DES INFORMATIONS IMPORTANTES DU PROJET -->
      {% for projet in projets %}
      <input type="hidden" id="Id_Projet" name="Id_Projet" value="{{projet.idprojet}}">
      {% endfor %}
      {% for membre in membres %}
      <input type="hidden" id="Id_Utilisateur" name="Id_Utilisateur" value="{{ membre.idutilisateur }}">
      {% endfor %}
      {% for contexte in contextes %}
      <input type="hidden" id="Id_Contexte" name="Id_Contexte" value="{{ contexte.idcontexte}}">
      {% endfor %}

      <input type="hidden" id="Date_insertion" name="Date_insertion" value="">
      <div class="d-flex justify-content-end m-2">
        <input type="submit" class="submit btn btn-outline-blue btn-xs ms-2" value="Ajouter le commentaire"
          name="ajout_com">
      </div>
    </form>
  </div>
</div>


{% endif %}

<!-- AFFICHAGE DES COMMENTAIRES PRÉSENT DANS LE PROJET -->

<section>


  {% for commentaire in commentaires %}
  <div class="d-flex flex-start  justify-content-center my-5 text-dark">
    <div class="card w-75 h-50">
      <div class="card-body p-4 bg-blue rounded">
        <div class="">
          <h5>{{ commentaire.nomUtilisateur }} {{commentaire.prenomUtilisateur}}</h5>
          <p class="small">{{commentaire.datecommentaire}}</p>
          <p class="content ms-5">
            {{ commentaire.com }}
          </p>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}


</section>



{% endblock %}